<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.PasswordField?>


<BorderPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/javafx" fx:controller="com.example.loginsystem.LoginController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login System">
           <font>
              <Font size="30.0" />
           </font>
        </Text>

        <TextField fx:id="usernameField" alignment="CENTER" prefHeight="25.0" prefWidth="308.0" promptText="Enter username" VBox.vgrow="NEVER">
           <VBox.margin>
              <Insets left="100.0" right="100.0" top="10.0" />
           </VBox.margin>
        </TextField>
        <PasswordField fx:id="passwordField" alignment="CENTER" prefHeight="25.0" prefWidth="308.0" promptText="Enter password">
           <VBox.margin>
              <Insets left="100.0" right="100.0" top="10.0" />
           </VBox.margin>
        </PasswordField>
        <Button prefWidth="300.0" text="Login" textAlignment="CENTER" onAction="#login">
           <VBox.margin>
              <Insets top="10.0" />
           </VBox.margin>
        </Button>
      </VBox>
   </center>
</BorderPane>
