<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.loginsystem.LoginController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
          <ColumnConstraints minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
           <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <font>
                   <Font size="30.0" />
               </font>
           </Text>

           <TextField fx:id="signUpFIrstName" alignment="CENTER" promptText="First name">
           <GridPane.margin>
              <Insets left="100.0" right="10.0" top="75.0" />
           </GridPane.margin>
           </TextField>
        <TextField fx:id="signUpUserName" alignment="CENTER" promptText="Username" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
           <GridPane.margin>
              <Insets left="100.0" right="100.0" top="150.0" />
           </GridPane.margin>
        </TextField>
           <PasswordField fx:id="signUpLastName" alignment="CENTER" prefHeight="25.0" prefWidth="308.0" promptText="Last Name" GridPane.columnIndex="1">
           <GridPane.margin>
              <Insets left="10.0" right="100.0" top="75.0" />
           </GridPane.margin>
           </PasswordField>
           <Button contentDisplay="CENTER" onAction="#signUp" prefWidth="300.0" text="Sign Up!" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="1">
           <GridPane.margin>
              <Insets left="100.0" />
           </GridPane.margin>
           </Button>
        <TextField fx:id="signUpPassword" alignment="CENTER" promptText="Password" GridPane.columnSpan="2">
           <GridPane.margin>
              <Insets left="100.0" right="100.0" top="220.0" />
           </GridPane.margin>
        </TextField>

      </GridPane>
   </center>
</BorderPane>
